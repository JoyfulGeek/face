<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.TeacherMainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/img1"

        >
    </android.support.v4.view.ViewPager>

    <ImageButton
        android:onClick="startCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"

        android:background="@mipmap/camera"
        android:layout_alignRight="@+id/id_viewpager" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="消息"
        android:id="@+id/textView13"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toStartOf="@+id/textView14"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="班级信息"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="考勤管理"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/textView14"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:layout_above="@+id/textView13"

        android:layout_alignTop="@+id/img3"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:background="@mipmap/chat" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img2"
        android:layout_alignTop="@+id/img1"
        android:layout_toRightOf="@+id/textView13"
        android:background="@mipmap/people"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:id="@+id/img3"
        android:layout_above="@+id/textView15"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@mipmap/alarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传照片"
        android:id="@+id/textView17"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />


</RelativeLayout>
