<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/id_sign"
        android:textSize="25dp"
        android:textColor="#215f9d"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10mm" />

    <RadioButton
        android:id="@+id/teacherRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="老师"
        android:layout_below="@+id/id_sign"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="16mm"
        android:layout_marginTop="12mm"
        android:layout_marginRight="2mm" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="副班长"
        android:id="@+id/monitorRB"
        android:checked="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/teacherRB"
        android:layout_alignTop="@+id/teacherRB"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:id="@+id/textView6"
        android:layout_marginTop="30mm"
        android:layout_marginLeft="10mm"
        android:layout_below="@+id/id_sign" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="10mm"
        android:layout_marginTop="5mm"
        android:layout_alignRight="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_marginTop="5mm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignBaseline="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_toRightOf="@+id/textView7"
        android:inputType="textPassword"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignBaseline="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_toRightOf="@+id/textView8"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignBaseline="@+id/textView8" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="确定"
        android:id="@+id/tran"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_edittext"
        android:textSize="20dp"
        android:elegantTextHeight="false"
        android:focusable="false" />

</RelativeLayout>
